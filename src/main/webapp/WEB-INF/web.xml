<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Servlets Tutorial</display-name>

  <servlet>
    <servlet-name>user</servlet-name>
    <servlet-class>com.example.controller.UserController</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>file</servlet-name>
    <servlet-class>com.example.controller.FileController</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>event</servlet-name>
    <servlet-class>com.example.controller.EventController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>user</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>file</servlet-name>
    <url-pattern>/file</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>event</servlet-name>
    <url-pattern>/event</url-pattern>
  </servlet-mapping>

</web-app>
